    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/style.css" typr="text/css">
</head>
<body>
    <% if(erros) 
    {%>
    <ul>
        <% for(let i=0; i < erros.length; i++) 
        {%>
            <li>
                <%= erros[i].msg %>
            </li>
        <%}%>
    </ul>
    <%}%>
    <main>
        <h1>Alterar dados</h1>
        <form action="usuario/alterar_dados" method="post">
            <label for="nome">Nome</label>
            <br>
            <input type="text" name="nome" id="nome" value="<%= usuario[0].nome %>">
            <br>
            <label for="email">E-mail</label>
            <br>
            <input type="email" name="email" id="email" value="<%= usuario[0].email %>">
        </form>   
    </main>
</body>
</html>